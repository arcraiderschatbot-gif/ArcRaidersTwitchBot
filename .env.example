# Twitch Bot Configuration
TWITCH_USERNAME=your_bot_username
TWITCH_OAUTH_TOKEN=oauth:your_token_here
TWITCH_CHANNEL=your_channel_name

# Stream-live gating (optional): bot only connects when this channel is live (e.g. on Railway)
# Set both to enable; uses Twitch Helix to check stream status.
TWITCH_CLIENT_ID=your_twitch_app_client_id
TWITCH_CLIENT_SECRET=your_twitch_app_client_secret

# Database â€” use SQLite locally, or set DATABASE_URL for PostgreSQL (e.g. Railway)
DB_PATH=./data/arcraids.db
# DATABASE_URL=postgresql://user:pass@host:port/db?sslmode=require

# Extension (EBS)
EXTENSION_SECRET=your_extension_secret_base64
EXTENSION_CLIENT_ID=your_client_id
BASE_URL=http://localhost:3000
PORT=3000
